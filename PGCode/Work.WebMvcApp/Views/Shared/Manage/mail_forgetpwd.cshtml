@model ProcCore.Business.Logic.m_Member
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@Resources.ResWeb.CompanyName</title>
</head>
<body style="line-height: 1.5em;color: #333333;font-family: Verdana, Arial, Helvetica, sans-serif;font-size:12px;letter-spacing :0.8pt;background-color:#ffffff;margin:0;padding:20px;text-align:center">

    <!--// container -->
    <table width="720" border="0" cellpadding="0" cellspacing="0" style="margin:0 auto;*margin:0;">

        <!--// header -->
        <tr>
            <td align="left" valign="top">
                <img style="float:left" src="@Resources.ResWeb.PublicUrl/Content/images/logo.png" title="@Resources.ResWeb.CompanyName" />
                <h3 style="float:right;font-weight:bold;font-size:18px;color:#784B21;line-height:92px;">【會員密碼通知】</h3>
            </td>
        </tr>
        <!-- header //-->
        <!--// main -->
        <tr>
            <td background="" align="left" style="padding-top:30px;border-top:1px dotted #cccccc">

                <!--// Member information -->
                <table width="100%" border="0" cellpadding="0" cellspacing="0">

                    <tr><td align="left" colspan="2" style="padding:10px 0 10px 35px;color:#FF0000">以下是您的相關資料</td></tr>
                    <tr>
                        <td width="75" align="left" style="padding:3px 5px 3px 35px;color:#666666">電子信箱</td>
                        <td width="640" align="left" style="padding:3px 7px;border-left:1px solid #eaeaea;">@Model.email</td>
                    </tr>
                    <tr>
                        <td align="left" style="padding:3px 5px 3px 35px;color:#666666">密碼</td>
                        <td align="left" style="padding:3px 7px;border-left:1px solid #eaeaea;">@Model.password</td>
                    </tr>
                    <tr><td align="left" colspan="2" style="padding:10px 0 10px 35px;color:#FF0000"></td></tr>
                </table>
                <!-- Member information //-->

                <br /><br />

                <!--footer -->
                <table width="100%" border="0" cellpadding="0" cellspacing="0" align="center" style="border-top:1px dotted #cccccc;padding:10px;color:#81746C;font-size:11px" bgcolor="#F9F5EC">
                    <tr>
                        <td align="right">
                            <span style="font:normal bold 15px/20px Arial; color:#D55B08;">@Resources.ResWeb.CompanyName</span><br />
                        </td>
                    </tr>
                </table>
                <!-- footer //-->
            </td>
        </tr>
        <!-- main //-->

    </table>
    <!-- container //-->
</body>
</html>
