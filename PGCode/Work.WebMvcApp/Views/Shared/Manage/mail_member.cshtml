@model ProcCore.Business.Logic.m_Member
<!DOCTYPE html>
<html>
<head>
 <meta charset="UTF-8" />
 <title></title>
</head>
<body style="line-height: 1.5em;color: #333333;font-family: Verdana, Arial, Helvetica, sans-serif;font-size:12px;letter-spacing :0.8pt;background-color:#ffffff;margin:0;padding:20px;text-align:center">

<!--// container -->
<table width="720" border="0" cellpadding="0" cellspacing="0" style="margin:0 auto;*margin:0;" >

	<!--// header -->
	<tr><td style="font-weight:bold;font-size:1.7em;color:#784B21; text-align:left; padding:10px 0; border-bottom:2px solid #F9F5EC;">
		欢迎加入【@Resources.ResWeb.CompanyName】购物网，成为本站会员
	</td></tr><!-- header //-->

		<!--// main -->
		<tr><td background="" align="left">

		<!--// Member information -->
		<table width="100%" border="0" cellpadding="0" cellspacing="0">
			<caption style="padding:30px 0 10px 0;text-align:left;color:#C6A885;font-size:1.5em;" valign="middle">
				以下是您的相关资料
			</caption>
			<tr>
				<td width="80" align="left" style="padding:3px 5px 3px 30px;color:#666666">电子信箱</td>
				<td width="630" align="left" style="padding:3px 7px;border-left:1px solid #eaeaea;">@Model.email</td>
			</tr>
			<tr>
				<td align="left" style="padding:3px 5px 3px 30px;color:#666666">登入密码</td>
				<td align="left" style="padding:3px 7px;border-left:1px solid #eaeaea;">@Model.password</td>
			</tr>
			<tr><td align="left" colspan="2" style="padding:10px 0 10px 30px;color:#FF0000">
				请点击以下链接完成注册：
                    <a href="@Resources.ResWeb.PublicUrl/Index/MberEmailCheck/?valid_code=@Model.valid_code">Link</a>
			</td></tr>
		</table><!-- Member information //-->

		<br /><br />

		<!-- copyright -->
		<table width="100%" border="0" cellpadding="0" cellspacing="0" align="center" style="border-top:1px dotted #cccccc;padding:10px;color:#81746C;font-size:11px" bgcolor="#F9F5EC">
			<tr><td align="right">
				<span style="font:normal bold 15px/20px Arial; color:#D55B08;">@Resources.ResWeb.CompanyName</span><br />
			</td></tr>
		</table><!-- copyright //-->

	</td></tr><!-- main //-->

</table><!-- container //-->

</body>
</html>
